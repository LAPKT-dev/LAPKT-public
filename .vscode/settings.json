{
    "cmake.sourceDirectory": "${workspaceFolder}",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "git.ignoreLimitWarning": true,
    "cmake.configureOnOpen": true,
    "cmake.configureArgs": [
        "-DCMAKE_FF=ON", "-DCMAKE_FD=ON", "-DCMAKE_VAL=ON", 
        "-DCMAKE_DOXYGEN_DOCS=ON", 
        "-DCMAKE_DOXYGEN_FLAT_THEME=ON",
        "-DCMAKE_DOXYGEN_AWESOME_THEME=ON",
        "-DCMAKE_SPHINX_DOCS=OFF"
    ],
    "cmake.parallelJobs": 4,
    "files.associations": {
        "*.ipp": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "map": "cpp",
        "set": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "initializer_list": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "ranges": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "cinttypes": "cpp",
        "typeinfo": "cpp",
        "numbers": "cpp"
    },
    "C_Cpp.default.cppStandard": "c++17",
    "doxdocgen.generic.authorEmail": "anubhav.singh.er@protonmail.com",
    "doxdocgen.generic.authorName": "Anubhav Singh",
    "doxdocgen.file.customTag": ["<Some additional text which you want to include along with file comments>"]
}